<!--pages/inputNumber/inputNumber.wxml-->
<view class="row">
    <view class="desc">
        基础用法
    </view>
    <view class="center">
        <jmd-switch
          checked="{{ checked1 }}"
          bind:change="onChange"/>
    </view>
</view>
<view class="row">
    <view class="desc">
        加载状态
         <text class="code">loading</text>
    </view>
    <view class="center">
        <jmd-switch
          checked="{{ checked1 }}" 
          loading
          bind:change="onChange"/>
    </view>
</view>
<view class="row">
    <view class="desc">
        自定义颜色
         <text class="code">active-color  inactive-color</text>
    </view>
    <view class="center">
        <jmd-switch
          checked="{{ checked3 }}" 
          active-color="#07c160"
          inactive-color="#f44"
          bind:change="onChange"/>
    </view>
</view>
<view class="row">
    <view class="desc">
        自定义大小
         <text class="code">size</text>
    </view>
    <view class="center">
        <jmd-switch 
         checked="{{ checked2 }}" 
         size="35px"
         bind:change="onChange"/>
    </view>
</view>


