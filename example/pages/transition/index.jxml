<view>
  <demo-block title="Fade 动画">
    <be-button type="primary" bind:click="fade">fade</be-button>
    <be-button type="primary" bind:click="fadeUp">fade-up</be-button>
    <be-button type="primary" bind:click="fadeDown">fade-down</be-button>
    <be-button type="primary" bind:click="fadeLeft">fade-left</be-button>
    <be-button type="primary" bind:click="fadeRight">fade-right</be-button>
  </demo-block>
  <demo-block title="Slide 动画">
    <be-button type="primary" bind:click="slideUp">slide-up</be-button>
    <be-button type="primary" bind:click="slideDown">slide-down</be-button>
    <be-button type="primary" bind:click="slideLeft">slide-left</be-button>
    <be-button type="primary" bind:click="slideRight">slide-right</be-button>
  </demo-block>
  <demo-block title="Zoom 动画">
    <be-button type="primary" bind:click="zoomIn">zoom-in</be-button>
  </demo-block>
  <demo-block title="自定义动画">
    <be-button type="primary" bind:click="custom">custom</be-button>
  </demo-block>

  <be-transition
    show="{{ show }}"
    name="{{ name }}"
    custom-class="block"
  />

  <be-transition
    show="{{ customShow }}"
    duration="{{ { enter: 700, leave: 1000 } }}"
    enter-class="custom-enter"
    enter-active-class="custom-enter-active"
    enter-to-class="custom-enter-to"
    leave-class="custom-leave"
    leave-active-class="custom-leave-active"
    leave-to-class="custom-leave-to"
    custom-class="block"
  />
</view>