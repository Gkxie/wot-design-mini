<demo-block title="基础用法">
	<be-slider value="{{ value1 }}" bind:dragmove="handleChange1"/>
</demo-block>
<demo-block title="指定选择范围">
	<be-slider value="{{ value2 }}" min="{{ 4 }}" max="{{ 1000 }}"  bind:dragmove="handleChange2"/>
</demo-block>
<demo-block title="指定步长">
	<be-slider value="{{ value4 }}" hide-min-max="{{ true }}" step="{{ 10 }}" bind:dragmove="handleChange4"/>
</demo-block>
<demo-block title="禁用状态">
	<be-slider value="{{ value5 }}" disabled="{{ true }}" bind:dragmove="handleChange5"/>
</demo-block>
<demo-block title="双向滑块">
	<be-slider value="{{ value6 }}"  bind:dragmove="handleChange6"/>
</demo-block>
