<view
  class="be-checkbox {{isChecked ? 'is-checked' : ''}} {{shape === 'button' ? 'is-button' : ''}} {{disabled ? 'is-disabled' : ''}} custom-class"
  bindtap="toggle"
>
  <!--shape为button时只保留be-checkbox__label-->
  <view
    wx:if="{{shape !== 'button' }}"
    class="be-checkbox__shape {{shape === 'square' ? 'is-square' : ''}}"
    style="{{(isChecked && !disabled) ? 'color :' + checkedColor : '' }}"
  >
    <be-icon
      custom-class="be-checkbox__check"
      name="check-round"
    />
  </view>
  <!--文字-->
  <view
    class="be-checkbox__label"
    style="{{isChecked && shape === 'button' && !disabled ? ('color:' + checkedColor) : ''}}"
  >
    <!--button选中时展示的icon-->
    <be-icon
      wx:if="{{shape === 'button' && isChecked}}"
      custom-class="be-checkbox__btn-check"
      name="check"
    />
    <!--文案-->
    <view class="be-checkbox__txt">
      <slot></slot>
    </view>
  </view>
  <view>
    {{shape === 'circle' || shape === 'square' ? 'check-round' : '' }}
  </view>
</view>
