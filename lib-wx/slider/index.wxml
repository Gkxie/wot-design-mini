<view class="be-slider {{ !hideLabel ? 'be-slider--has-label' : '' }} {{ disabled ? 'be-slider--disabled' : '' }} custom-class">
  <view class="be-slider__label-min custom-min-class" wx:if="{{ !hideMinMax }}">
  {{ min }}
  </view>
  <view
    bind:touchstart="handleTouchStart"
    bind:touchend="handleTouchEnd"
    bind:touchcancel="handleTouchEnd"
    catch:touchmove="handleTouchMove"
    class="be-slider__axle {{ !hideMinMax ? 'be-slider__axle--has-min-max' : '' }}">
    <!-- 左边的圆点 -->
    <view
      class="be-slider__handle-container"
      style="left: {{ handlePosition[0] - handleRadius + 'px' }}; visibility: {{ !disabled ? 'show' : 'hidden' }}">
      <view class="be-slider__handle"></view>
      <view class="be-slider__label-cur" wx:if="{{ !hideLabel }}">
      {{ showRight ? value[0] : value }}
      </view>
    </view>
    <!-- 右边的圆点 -->
    <view
      wx:if="{{ showRight }}"
      style="left: {{ handlePosition[1] - handleRadius + 'px' }}; visibility: {{ !disabled ? 'show' : 'hidden' }}"
      class="be-slider__handle-container">
      <view class="be-slider__handle"></view>
      <view
        class="be-slider__label-cur"
        wx:if="{{ !hideLabel }}">
        {{ showRight ? value[1] : '' }}
      </view>
    </view>
    <!-- 激活线 -->
    <view
      class="be-slider__progress-bar"
      style="width: {{ activeLineWidth + 'px'}}; left: {{ activeLineLeft + 'px'}}">
    </view>
  </view>
  <view
    class="be-slider__label-max custom-max-class"
    wx:if="{{ !hideMinMax }}">
    {{ max }}
  </view>
</view>