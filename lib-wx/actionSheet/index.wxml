<be-popup
  custom-class="be-action-sheet"
  show="{{ show }}"
  duration="{{ duration }}"
  position="bottom"
  close-on-click-modal="{{ closeOnClickModal }}"
  bind:enter="handleOpen"
  bind:close="close"
  bind:after-enter="handleOpened"
  bind:after-leave="handleClosed"
  z-index="{{ zIndex }}"
>
  <view wx:if="{{ title }}" class="be-action-sheet__header">
    {{ title }}
    <be-icon custom-class="be-action-sheet__close" name="add" bind:tap="close"/>
  </view>
  <view>
    <button
      wx:for="{{ actions }}"
      wx:key="{{ index }}"
      class="be-action-sheet__action {{ item.disabled ? 'be-action-sheet__action--disabled' : '' }} {{ item.loading ? 'be-action-sheet__action--loading' : '' }}"
      style="color: {{ item.color }}"
      data-index="{{ index }}"
      bind:tap="select"
    >
      <be-loading wx:if="{{ item.loading }}" size="20px" color="{{ item.color }}"/>
      <view wx:else class="be-action-sheet__name">{{ item.name }}</view>
      <view wx:if="{{ !item.loading && item.subname }}" class="be-action-sheet__subname">{{ item.subname }}</view>
    </button>
  </view>
  <slot/>
  <button wx:if="{{ cancelText }}" class="be-action-sheet__cancel" bind:tap="handleCancel">{{ cancelText }}</button>
</be-popup>