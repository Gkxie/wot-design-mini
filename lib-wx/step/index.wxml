<view
  wx:if="{{ currentStatus }}"
  class="jm-step custom-class {{ currentStatus ? 'is-' + currentStatus : '' }} {{ canAlignCenter ? 'is-center' : '' }} {{ vertical ? 'is-vertical' : '' }}"
  style="{{ styles }}"
>
  <view class="jm-step__header {{ dot ? 'is-dot' : '' }}">
    <view class="jm-step__icon {{ dot ? 'is-dot' : (!!icon || iconSlot ? 'is-icon' : 'is-text') }}">
      <view wx:if="{{ dot }}" class="jm-step__dot"></view>
      <slot wx:elif="{{ iconSlot }}" name="icon" />
      <jm-icon wx:elif="{{ icon }}" class="jm-step__icon-inner" name="{{ icon }}" />
      <view wx:elif="{{ currentStatus !== 'finished' && currentStatus !== 'error' }}" class="jm-step__icon-outer">{{ index + 1 }}</view>
      <jm-icon wx:else class="jm-step__icon-inner" name="{{ currentStatus === 'finished' ? 'success' : 'close' }}" />
    </view>
    <view wx:if="{{ index < childrenLength - 1 }}" class="jm-step__line"></view>
  </view>
  <view class="jm-step__content">
    <view class="jm-step__title {{ descriptionSlot || description ? 'is-description' : '' }}">
      <slot wx:if="{{ titleSlot }}" name="title" />
      <text wx:else>{{ currentTitle }}</text>
    </view>
    <view wx:if="{{ descriptionSlot || description }}" class="jm-step__description">
      <slot wx:if="{{ descriptionSlot }}" />
      <text wx:else>{{ description }}</text>
    </view>
  </view>
</view>