<view class="be-input {{ type === 'textarea' ? 'is-textarea' : '' }} {{ disabled ? 'is-disabled' : '' }} custom-class">
  <!-- 文本域 -->
	<view wx:if="{{ type === 'textarea' }}">
  	<view class="be-input__textarea {{ showWordCount ? 'is-show-limit' : '' }}">
      <!-- readonly -->
    	<view wx:if="{{ readonly }}" class="be-input__textarea-inner">{{ value }}</view>
      <block wx:else>
        <textarea
          class="be-input__textarea-inner {{ showClear ? 'is-suffix' : '' }} custom-textarea-class"
          value="{{ value }}"
          placeholder="{{ placeholder }}"
          disabled="{{ disabled }}"
          minlength="{{ minlength }}"
          maxlength="{{ maxlength }}"
          focus="{{ focus }}"
          placeholder-style="{{ placeholderStyle }}"
          placeholder-class="{{ placeholderClass }}"
          auto-focus="{{ autofocus }}"
          auto-height="{{ autoHeight }}"
          cursor-spacing="{{ cursorSpacing }}"
          fixed="{{ fixed }}"
          cursor="{{ cursor }}"
          show-confirm-barb="{{ showConfirmBar }}"
          selection-start="{{ selectionStart }}"
          selection-end="{{ selectionEnd }}"
          adjust-position="{{ adjustPosition }}"
          hold-keyboard="{{ holdKeyboard }}"
          bindinput="handleInput"
          bindfocus="handleFocus"
          bindblur="handleBlur"
          bindconfirm="handleConfirm"
          bindlinechange="handleLineChange"
          bindkeyboardheightchange="handleKeyboardheightchange"
        />
        <view class="be-input__textarea-suffix">
          <be-icon wx:if="{{ showClear }}" class="be-input__icon" name="close-outline" catchtap="clear"/>
          <view wx:if="{{ showWordCount }}" class="be-input__textarea-count">
            <text class="be-input__textarea-count-current {{ value.length> parseInt(maxlength) ? 'is-error' : '' }}">{{ value.length }}</text>/{{ maxlength }}
          </view>
        </view>
      </block>
    </view>
  </view>
  <!-- 输入域 -->
  <view wx:else class="be-input__block">
    <view wx:if="{{ prefixIcon || usePrefixSlot }}" class="be-input__icon-wrap">
      <be-icon wx:if="{{ prefixIcon }}" class="be-input__icon" name="{{ prefixIcon }}"/>
      <view wx:else class="custom-prefix-class">
        <slot name="prefix"></slot>
      </view>
    </view>
    <!-- readonly -->
    <view wx:if="{{ readonly }}" class="be-input__inner be-input__readonly">{{ value }}</view>
    <!-- 密码隐藏 -->
    <block wx:else>
      <input
        wx:if="{{ showPassword && !isPwdVisible }}"
        class="be-input__inner {{ prefixIcon ? 'be-input__inner--prefix' : '' }} {{ showWordCount ? 'be-input__inner--count' : '' }} custom-input-class"
        type="password"
        password="{{ isPwdVisible }}"
        value="{{ value }}"
        placeholder="{{ placeholder }}"
        readonly="{{ readonly }}"
        disabled="{{ disabled }}"
        minlength="{{ minlength }}"
        maxlength="{{ maxlength }}"
        focus="{{ focus }}"
        confirm-type="{{ confirmType }}"
        confirm-hold="{{ confirmHold }}"
        cursor="{{ cursor }}"
        cursor-spacing="{{ cursorSpacing }}"
        placeholder-style="{{ placeholderStyle }}"
        selection-start="{{ selectionStart }}"
        selection-end="{{ selectionEnd }}"
        adjust-position="{{ adjustPosition }}"
        hold-keyboard="{{ holdKeyboard }}"
        placeholder-class="{{ placeholderClass }}"
        bindinput="handleInput"
        bindfocus="handleFocus"
        bindblur="handleBlur"
        bindconfirm="handleConfirm"
        bindkeyboardheightchange="handleKeyboardheightchange"
      >
      </input>
      <!-- 密码不隐藏 -->
      <input
        wx:else
        class="be-input__inner {{ prefixIcon ? 'be-input__inner--prefix' : '' }} {{ showWordCount ? 'be-input__inner--count' : '' }} custom-input-class"
        type="text"
        value="{{ value }}"
        placeholder="{{ placeholder }}"
        readonly="{{ readonly }}"
        disabled="{{ disabled }}"
        minlength="{{ minlength }}"
        maxlength="{{ maxlength }}"
        focus="{{ focus }}"
        confirm-type="{{ confirmType }}"
        confirm-hold="{{ confirmHold }}"
        cursor="{{ cursor }}"
        cursor-spacing="{{ cursorSpacing }}"
        placeholder-style="{{ placeholderStyle }}"
        selection-start="{{ selectionStart }}"
        selection-end="{{ selectionEnd }}"
        adjust-position="{{ adjustPosition }}"
        hold-keyboard="{{ holdKeyboard }}"
        placeholder-class="{{ placeholderClass }}"
        bindinput="handleInput"
        bindfocus="handleFocus"
        bindblur="handleBlur"
        bindconfirm="handleConfirm"
        bindkeyboardheightchange="handleKeyboardheightchange"
      >
      </input>
      <view wx:if="{{ showClear || showPassword || suffixIcon || showWordCount || useSuffixSlot }}" class="be-input__icon-wrap">
        <be-icon wx:if="{{ showClear }}" class="be-input__icon " name="close-outline"  bindtap="clear"/>
        <be-icon
          wx:if="{{ showPassword }}"
          class="be-input__icon "
          name="{{ isPwdVisible ? 'view' : 'eye-close' }}"
          bindtap="togglePwdVisible"
        />
        <view wx:if="{{ showWordCount }}" class="be-input__count">
          <view class="be-input__count-current {{  value.length > maxlength ?  'is-error' : '' }}">{{ value.length }}</view>/{{ maxlength }}
        </view>
        <be-icon wx:if="{{ suffixIcon }}" class="be-input__icon " name="{{ suffixIcon }}"/>
        <view wx:else class="custom-suffix-class">
          <slot name="suffix"></slot>
        </view>
      </view>
    </block>
  </view>
</view>

