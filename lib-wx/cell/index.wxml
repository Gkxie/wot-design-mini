<view class="be-cell custom-class {{noHair?'is-no-hair':'' }}"
      hover-class="{{clickable?'is-hover':'none'}}"
      hover-stay-time="70"
      bindtap="onClick">
  <!--左侧icon部位-->
  <be-icon
    wx:if="{{icon}}"
    name="{{icon}}"
    class="be-cell__icon custom-icon-class"
  >
  </be-icon>
  <view wx:else class="custom-icon-class">
    <slot name="icon"/>
  </view>

  <view class="be-cell__wrapper">
    <view class="be-cell__title">
      <!--title BEGIN-->
      <view class="custom-title-class">
        <block wx:if="{{title}}">{{title}}</block>
        <slot wx:else name="title"></slot>
      </view>
      <!--title END-->

      <!--label BEGIN-->
      <view wx:if="{{label}}" class="be-cell__label custom-label-class">
        <block>{{label}}</block>
      </view>
      <slot wx:else name="label"/>
      <!--label END-->
    </view>

    <!--right content BEGIN-->
    <view class="be-cell__right">
      <!--文案内容-->
      <view class="be-cell__value custom-value-class">
        <block wx:if="{{value}}">{{value}}</block>
        <slot wx:else></slot>
      </view>
      <!--箭头-->
      <be-icon wx:if="{{isLink}}" class="be-cell__arrow-right" name="arrow-right"/>
    </view>
    <!--right content END-->
  </view>
</view>