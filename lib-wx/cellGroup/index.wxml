<view class="wd-cell-group custom-class">
  <view wx:if="{{title || value || useSlot}}" class="wd-cell-group__title">
    <!--左侧标题-->
    <view class="wd-cell-group__left">
      <text wx:if="{{title}}">{{ title }}</text>
      <slot wx:else name="title"></slot>
    </view>
    <!--右侧标题-->
    <view class="wd-cell-group__right">
      <text wx:if="{{value}}">{{ value }}</text>
      <slot wx:else name="value"></slot>
    </view>
  </view>
  <view class="wd-cell-group__body">
    <slot></slot>
  </view>
</view>