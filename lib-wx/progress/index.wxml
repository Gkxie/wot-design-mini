<view class="be-progress {{ hideText ? '' : 'is-with-text' }} custom-class">
  <!--文案-->
  <view wx:if="{{!hideText}}" class="be-progress__label" style="left: {{percentage}}%">{{ percentage }}%</view>
  <!--进度条-->
  <view class="be-progress__outer">
    <view
      class="be-progress__inner"
      style="background:{{showColor}}; width:{{showPercent}}%;transition-duration:{{changeCount * duration * 0.001}}s;"
    >
    </view>
  </view>
</view>