<jm-transition
  name="fade"
  show="{{ show }}"
  custom-class="jm-toast__container"
  custom-style="z-index: {{ zIndex }};"
>
  <view
    class="jm-toast custom-class jm-toast--{{position}} {{ (iconName || customIcon) ? 'jm-toast--with-icon' : '' }} {{ iconName === 'loading' && !msg ? 'jm-toast--loading' : '' }}"
  >
    <!--iconName优先级更高-->
    <jm-loading
      wx:if="{{iconName === 'loading'}}"
      type="{{ loadingType }}"
      custom-class="{{ msg ? 'jm-toast__loading' : '' }}"
    />
    <jm-icon wx:elif="{{iconName}}" class="jm-toast__icon" name="{{iconName}}"/>
    <view wx:elif="{{customIcon}}" class="jm-toast__icon custom-icon-class"/>
    <!--文本-->
    <view wx:if="{{ msg }}" class="jm-toast__msg">{{ msg }}</view>
  </view>
</jm-transition>
