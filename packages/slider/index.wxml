  <view class="jm-slider {{ !hideLabel ? 'jm-slider--has-label' : '' }} {{ disabled ? 'jm-slider--disabled' : '' }} ">
    <view class="jm-slider__label-min" jd:if="{{ !hideMinMax }}">
      {{ minValue }}
    </view>
    <!--  ref="axle" -->
    <view
      class="jm-slider__axle {{ !hideMinMax ? 'jm-slider__axle--has-min-max' : '' }}"
      bind:touchstart="slidingStart"
      bind:touchend="slidingEnd"
      bind:touchcancel="slidingEnd"
      catch:touchmove="sliding">
      <!-- ref="container" -->
      <view
        jd:if="{{ !disabled }}"
        class="jm-slider__handle-container"
        style="left: {{ handlePosition[0] - handleRadius + 'px' }}">
        <view class="jm-slider__handle"></view>
        <view
          class="jm-slider__label-cur"
          jd:if="{{ !hideLabel }}">
          {{ value }}
        </view>
      </view>
      <view
        jd:if="{{ !disabled }}"
        style="left: {{ handlePosition[1] - handleRadius + 'px' }}"
        class="jm-slider__handle-container">
        <view class="jm-slider__handle"></view>
        <view
          class="jm-slider__label-cur"
          jd:if="{{ !hideLabel }}">
          {{ value }}
        </view>
      </view>
      <view
        class="jm-slider__progress-bar"
        style="width: {{ Math.abs(handlePosition[0] - handlePosition[1]) + 'px'}}; left: {{ Math.min(handlePosition[0], handlePosition[1]) + 'px'}}">
      </view>
    </view>
    <view
      class="jm-slider__label-max"
      jd:if="{{ !hideMinMax }}">
      {{ maxValue }}
    </view>
  </view>