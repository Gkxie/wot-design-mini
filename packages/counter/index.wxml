
<wxs src="../wxs/utils.wxs" module="utils" />
<view class="jm-counter hover-class">
    <view  class="{{ utils.bem('counter',null,['minus'])}} {{ utils.bem('counter--minus',null,[{ disabled:minusDisabled }])}}  minus-class"
           data-disabled="{{ minusDisabled }}"
           bind:tap="handleMinus"/>

    <input  bind:blur="handleBlur"
            bind:input="handleInput"
            bind:focus="handleFocus"
            type="{{ integer ? 'number' : 'digit' }}"
            class="{{ utils.bem('counter',null,['input'])}}  {{ utils.bem('counter--input',null,[{ disabled:inputDisabled }])}} input-class"
            style="{{ inputWidth ? 'width: ' + inputWidth : '' }}"
            value="{{ value }}"
            disabled="{{ inputDisabled }}"
            wx:if="{{ mode === 'custom' }}"/>

    <view class="{{ utils.bem('counter',null,['plus'])}} {{ utils.bem('counter--plus',null,[{ disabled:plusDisabled }])}} plus-class"
          data-disabled="{{ plusDisabled }}"
          bind:tap="handlePlus"/>
</view>



