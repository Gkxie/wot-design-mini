
<wxs src="../wxs/utils.wxs" module="utils" />
<view class="jmd__inputNumberContainer hover-class">
    <view  class="{{ utils.bem('inputNumberContainer',['minus',{disabled:minusDisabled}])}} minus-class"
           data-disabled="{{ minusDisabled}}"
           bind:tap="handleMinus"
           wx:if="{{ showMinus }}">
           -
    </view>

    <input  bind:blur="handleBlur"
            bind:input="handleInput"
            bind:focus="handleFocus"
            type="{{ integer ? 'number' : 'digit' }}"
            class=" {{ utils.bem('inputNumberContainer',['input',{disabled:inputDisabled}]) }} input-class"
            style="{{ inputWidth ? 'width: ' + inputWidth : '' }}"
            value="{{ value }}"
            disabled="{{ inputDisabled }}"/>

    <view class=" {{ utils.bem('inputNumberContainer',['plus',{disabled:plusDisabled}]) }} plus-class"
          data-disabled="{{ plusDisabled }}"
          bind:tap="handlePlus"
          wx:if="{{ showPlus }}">
          +
    </view>
</view>



