
<wxs src="../wxs/utils.wxs" module="utils" />
<view class="jm-input-number hover-class">
    <view  class="{{ utils.bem('input-number',null,['minus'])}} {{ utils.bem('input-number--minus',null,[{ disabled:minusDisabled }])}}  minus-class"
           data-disabled="{{ minusDisabled }}"
           bind:tap="handleMinus"
           wx:if="{{ showMinus }}" />

    <input  bind:blur="handleBlur"
            bind:input="handleInput"
            bind:focus="handleFocus"
            type="{{ integer ? 'number' : 'digit' }}"
            class="{{ utils.bem('input-number',null,['input'])}}  {{ utils.bem('input-number--input',null,[{ disabled:inputDisabled }])}} input-class"
            style="{{ inputWidth ? 'width: ' + inputWidth : '' }}"
            value="{{ value }}"
            disabled="{{ inputDisabled }}"/>

    <view class="{{ utils.bem('input-number',null,['plus'])}} {{ utils.bem('input-number--plus',null,[{ disabled:plusDisabled }])}} plus-class"
          data-disabled="{{ plusDisabled }}"
          bind:tap="handlePlus"
          wx:if="{{ showPlus }}" />
</view>



