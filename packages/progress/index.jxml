<view class="jm-progress {{ hideText ? '' : 'is-with-text' }} custom-class">
  <!--文案-->
  <view jd:if="{{!hideText}}" class="jm-progress__label" style="left: {{percentage}}%">{{ percentage }}%</view>
  <!--进度条-->
  <progress
    class="jm-progress__outer"
    percent="{{showPercent}}"
    activeColor="{{showColor}}"
    backgroundColor="#e5e5e5"
    stroke-width="3"
    active="{{true}}"
    active-mode="forwards"
  />
</view>