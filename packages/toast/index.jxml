<jm-transition
  name="fade"
  show="{{ show }}"
  custom-class="jm-toast__container"
  custom-style="z-index: {{ zIndex }};"
>
  <view
    class="jm-toast jm-toast--{{position}} {{ (iconName || iconClass) ? 'jm-toast--with-icon' : '' }} {{ iconName === 'loading' && !msg ? 'jm-toast--loading' : '' }}"
  >
    <!--iconName优先级更高-->
    <jm-loading jd:if="{{iconName === 'loading'}}" type="{{ loadingType }}" custom-class="{{ msg ? 'jm-toast__loading' : '' }}" />
    <jm-icon jd:elif="{{iconName}}" class="jm-toast__icon" name="{{iconName}}"/>
    <jm-icon jd:elif="{{iconClass}}" class="jm-toast__icon" name="{{iconClass}}"/>
    <!--文本-->
    <view jd:if="{{ msg }}" class="jm-toast__msg">{{ msg }}</view>
  </view>
</jm-transition>
