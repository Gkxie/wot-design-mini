<view class="wd-tooltip custom-class">
	<view
    class="wd-tooltip__pos "
    style="{{ popStyle }}; opacity: {{ visible ? '1' : '0' }}" >
		<view class="wd-tooltip__container {{ 'is-' + effect }} custom-pop">
			<view class="wd-tooltip__arrow {{ arrowClass }} custom-arrow" ></view>
      <!-- 普通模式 -->
			<view jd:if="{{ !useContentSlot && mode === 'normal' }}" class="wd-tooltip__inner">{{ content }}</view>
       <!-- 列表模式 -->
      <view jd:if="{{ !useContentSlot && mode === 'menu' }}" class="wd-tooltip__menu-inner ">
        <view
          jd:for="{{ content }}"
          jd:key="{{ item.index }}"
          class="wd-tooltip__menu"
          style="border-top: {{ index === 0 ? 'none' : '1px solid rgba(255, 255, 255, .5)' }}" >
          <wd-icon
            name="{{ item.name  }}"
            class="wd-tooltip__icon"
          />
          <text>{{item.content}}</text>
        </view>
      </view>
      <!-- 用户自定义样式 -->
      <slot name="content" jd:else/>
		</view>
	</view>
	<view catchtap="click" class="wd-tooltip__target">
		<slot />
	</view>
</view>
