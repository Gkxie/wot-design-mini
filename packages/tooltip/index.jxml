<view class="wd-tooltip">
	<view
    class="wd-tooltip__pos"
    style="{{ popStyle }}; visibility: {{ show ? '' : 'hidden' }}">
		<view class="wd-tooltip__container">
			<view class="wd-tooltip__arrow {{ arrowClass }}" ></view>
			<view jd:if="{{ useContentSlot }}" class="wd-tooltip__inner">{{ content }}</view>
      <block jd:else>
        <slot name="contet"/>
      </block>
		</view>
	</view>
	<view catchtap="click" class="wd-tooltip__target">
		<slot />
	</view>
</view>
