.jm-badge{position:relative;vertical-align:middle;display:inline-block}.jm-badge__content{background-color:#e2231a;border-radius:10px;color:#fff;display:inline-block;font-size:12px;height:18px;line-height:18px;padding:0 6px;text-align:center;white-space:nowrap;border:1px solid #fff}.jm-badge__content.is-fixed{position:absolute;top:0;right:10px;-webkit-transform:translateY(-50%) translateX(100%);transform:translateY(-50%) translateX(100%)}.jm-badge__content.is-fixed.is-dot{right:5px}.jm-badge__content.is-dot{height:8px;width:8px;padding:0;right:0;border-radius:50%}.jm-badge__content--primary{background-color:#0084ff}.jm-badge__content--success{background-color:#00c740}.jm-badge__content--warning{background-color:#ffb300}.jm-badge__content--info{background-color:#909399}.jm-badge__content--danger{background-color:#e2231a}