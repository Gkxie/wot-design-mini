.wd-slider{display:flex;flex-flow:row nowrap;align-items:center;height:42px}.wd-slider__label,.wd-slider__label-max,.wd-slider__label-min{font-size:14px;color:#333}.wd-slider__label{text-align:center;width:28px;line-height:28px;background-color:hsla(0,0%,100%,.5);border-radius:100%;position:absolute;top:-28px}.wd-slider__bar-wrapper{flex:1;position:relative;border-radius:999px;background-color:#e5e5e5;margin:20px 21px}.wd-slider__bar{position:relative;border-radius:inherit;height:6px;background-color:#0084ff}.wd-slider__button-wrapper{width:28px;position:absolute;right:0;top:0;transform:translate3d(50%,-50%,0)}.wd-slider__has-label{padding-top:14px}.wd-slider__button{height:28px;width:28px;background-color:#fff;border-radius:100%;border:1px solid #e5e5e5;box-shadow:0 2px 4px 0 rgba(0,0,0,.3)}.wd-slider--disabled .wd-slider__bar{background-color:#e5f3ff}.wd-slider--disabled .wd-slider__label-max,.wd-slider--disabled .wd-slider__label-min{color:#d2d2d2}