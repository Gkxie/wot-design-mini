.be-slider{display:flex;flex-flow:row nowrap;align-items:center;height:42px}.be-slider__label-cur,.be-slider__label-max,.be-slider__label-min{font-size:14px;color:#333}.be-slider__label-cur{text-align:center;line-height:28px;background-color:hsla(0,0%,100%,.5);border-radius:100%}.be-slider__axle{flex-grow:1;position:relative;height:6px;border-radius:3px;background-color:#e5e5e5;margin:0 14px;z-index:0}.be-slider__axle--has-min-max{margin:0 21px}.be-slider__handle-container{position:absolute;top:-39px;left:-14px;display:flex;flex-flow:column-reverse nowrap;height:56px;z-index:2}.be-slider__handle{height:28px;width:28px;background-color:#fff;border-radius:100%;border:1px solid #e5e5e5;box-shadow:0 2px 4px 0 rgba(0,0,0,.3)}.be-slider__progress-bar{height:6px;border-radius:3px;background-color:#0084ff;position:absolute;z-index:1}.be-slider--has-label{padding-top:14px}.be-slider--disabled .be-slider__progress-bar{background-color:#e5f3ff}.be-slider--disabled .be-slider__label-max,.be-slider--disabled .be-slider__label-min{color:#d2d2d2}