.jm-search{padding:10px 0 10px 15px;background:#fff}.jm-search,.jm-search__block{display:-webkit-flex;display:flex;-webkit-align-items:center;align-items:center}.jm-search__block{-webkit-flex:1;flex:1;background-color:#f4f4f4;border-radius:4px;-webkit-flex-direction:row;flex-direction:row;position:relative}.jm-search__placeholder{position:absolute;top:0;right:0;bottom:0;left:0;z-index:2;background-color:#f4f4f4;line-height:28px;font-size:14px;color:#a7a7a7;text-align:center;vertical-align:middle}.jm-search__input{-webkit-flex:1;flex:1;height:28px;border-radius:4px;box-sizing:border-box;padding:5px 0;border:none;line-height:14px;background:transparent;font-size:14px;-webkit-appearance:none;outline:none;color:#333;z-index:1;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.jm-search__input::-webkit-search-cancel-button{-webkit-appearance:none}.jm-search__search-icon{margin:0 8px 0 10px;color:#c5c5c5;vertical-align:middle;font-size:14px;line-height:14px}.jm-search__placeholder-txt{line-height:28px;color:#a7a7a7;font-size:14px;vertical-align:middle}.jm-search__clear{margin-right:12px;padding:4px;font-size:14px;color:#a7a7a7}.jm-search__cancel{padding:0 15px 0 10px;height:28px;line-height:28px;font-size:14px;color:#0084ff}.jm-search.is-light{background:#f4f4f4}.jm-search.is-light .jm-search__block,.jm-search.is-light .jm-search__placeholder{background:#fff}.jm-search.is-without-cancel{padding-right:15px}