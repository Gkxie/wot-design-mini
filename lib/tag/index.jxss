.wd-tag{display:inline-block;padding:0 5px;color:#fff;border-radius:2px;font-size:0;transition:opacity .3s;vertical-align:middle;background:linear-gradient(90deg,#777,#888);border:1px solid transparent}.wd-tag.is-plain{background:transparent;color:#777;border-color:#777}.wd-tag.is-primary{background:linear-gradient(90deg,#0083ff,#0098ff);border:1px solid transparent}.wd-tag.is-primary.is-plain{background:transparent;color:#0083ff;border-color:#0083ff}.wd-tag.is-danger{background:linear-gradient(90deg,#ff4c4c,#ff614c);border:1px solid transparent}.wd-tag.is-danger.is-plain{background:transparent;color:#f2403d;border-color:#f2403d}.wd-tag.is-warning{background:linear-gradient(90deg,#ff8200,#f69f00);border:1px solid transparent}.wd-tag.is-warning.is-plain{background:transparent;color:#ff8200;border-color:#ff8200}.wd-tag.is-success{background:linear-gradient(90deg,#30be05,#31ca03);border:1px solid transparent}.wd-tag.is-success.is-plain{background:transparent;color:#30be05;border-color:#30be05}.wd-tag.is-dynamic{background:linear-gradient(90deg,#0083ff,#0098ff);border:1px solid transparent}.wd-tag.is-dynamic.is-plain{background:transparent;color:#0083ff;border-color:#0083ff}.wd-tag__icon{margin-right:3px;margin-top:1px;font-size:10px}.wd-tag__icon,.wd-tag__text{display:inline-block;vertical-align:middle}.wd-tag__text{font-size:12px}.wd-tag__close{width:14px;height:14px;margin-left:10px;font-size:14px;color:#c5c5c5}.wd-tag__add-text,.wd-tag__close{display:inline-block;vertical-align:middle}.wd-tag__add-text{height:17px;min-height:17px;width:60px;font-size:12px}.wd-tag.is-small .wd-tag__text{font-size:10px}.wd-tag.is-small .wd-tag__add-text{height:14px;min-height:14px;font-size:10px}.wd-tag.is-small .wd-tag__close{transform:translateY(1px);margin-left:4px;font-size:12px}.wd-tag.is-large{padding:3px 10px}.wd-tag.is-large .wd-tag__close{margin-left:18px}